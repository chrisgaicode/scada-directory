---
import { getIntegrators } from '../../lib/data';

import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const allIntegrators = getIntegrators();
  
  return allIntegrators.map(integrator => {
    // 1. Slug Generation
    const name = integrator.name || integrator["Integrator Name"];
    const rawSlug = integrator.slug || integrator["Slug"] || name;
    const safeSlug = rawSlug.toLowerCase().trim()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/(^-|-$)+/g, '');

    // 2. "Nearby" Logic (Same State)
    const loc = integrator.location || integrator["Location"] || "";
    const state = loc.includes(',') ? loc.split(',').pop().trim() : loc;
    
    const nearby = allIntegrators
      .filter(i => {
        const iLoc = i.location || i["Location"] || "";
        return iLoc.includes(state) && (i["Integrator Name"] !== name);
      })
      .slice(0, 3);

    // 3. "Similar" Logic (Same Industry)
    const industriesStr = integrator["Industries Served"] || "";
    const firstIndustry = industriesStr.split(',')[0].trim();
    
    const similar = allIntegrators
      .filter(i => {
        const iInd = i["Industries Served"] || "";
        return iInd.includes(firstIndustry) && 
               (i["Integrator Name"] !== name) &&
               !nearby.includes(i);
      })
      .slice(0, 3);

    return {
      params: { slug: safeSlug },
      props: { integrator, nearby, similar, stateLabel: state, industryLabel: firstIndustry },
    };
  });
}

const { integrator, nearby, similar, stateLabel, industryLabel } = Astro.props;

// Core Data extraction
const name = integrator.name || integrator["Integrator Name"];
const location = integrator.location || integrator["Location"];
const website = integrator.website || integrator["Website"];
const industries = integrator["Industries Served"] || "";
const certLevel = integrator["Certification Level"] || "";

const richDescription = integrator["AI_Description"] || integrator["Description"] || "";
const description = richDescription.length > 10 
  ? richDescription 
  : `${name} is a professional automation and SCADA integration firm based in ${location}.`;

const categories = integrator["Categories"] || integrator["Category"] || "";
const protocols = integrator["Supported Protocols"] || integrator["Protocols"] || "";
const isPremier = certLevel && certLevel.includes("Premier");

// Helper function to generate slug for related cards
function getSlug(i) {
  const n = i.name || i["Integrator Name"];
  const r = i.slug || i["Slug"] || n;
  return r.toLowerCase().trim().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)+/g, '');
}
