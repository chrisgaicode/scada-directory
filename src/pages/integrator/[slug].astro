              </div>

              {(categories || protocols) && (
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-slate-950 p-6 rounded-xl border border-slate-800">
                  {protocols && (
                    <div>
                      <h3 class="text-xs font-bold text-green-400 uppercase tracking-wider mb-3">Supported Protocols</h3>
                      <div class="flex flex-wrap gap-2">
                        {protocols.split(',').map(p => (
                          <span class="bg-slate-900 text-slate-300 px-2 py-1 rounded border border-slate-700 text-xs font-mono font-bold hover:border-green-500/50 transition-colors cursor-default">
                            {p.trim()}
                          </span>
