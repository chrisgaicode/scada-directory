            </div>

          </div>
        </div>

      </div>

      <div class="mt-20 pt-10 border-t border-slate-800">
        <h2 class="text-2xl font-bold text-white mb-8">Compare Integrators</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          
          <div>
            <h3 class="text-sm font-bold text-green-400 uppercase tracking-wider mb-4 flex items-center gap-2">
              Nearby in {stateLabel}
            </h3>
            {nearby.length > 0 ? (
              <div class="space-y-4">
                {nearby.map(i => (
                  <a href={`/integrator/${getSlug(i)}`} class="block bg-slate-900 border border-slate-800 p-4 rounded-lg hover:border-green-500/30 hover:bg-slate-800 transition-all group">
                    <div class="flex justify-between items-start">
                      <div class="font-bold text-slate-200 group-hover:text-green-400">{i["Integrator Name"]}</div>
                      {(i["Certification Level"]||"").includes("Premier") && <span class="text-[10px] bg-amber-500/10 text-amber-500 px-1.5 py-0.5 rounded border border-amber-500/20">PREMIER</span>}
                    </div>
